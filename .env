
# Database Configuration
DB_USER=logforge
DB_PASSWORD=logforge_secure_password
DB_NAME=logforge_db

# JWT Authentication
JWT_SECRET=logforge_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# API Configuration
# Use the URL that will be accessible from the user's browser
# For local development, use http://localhost:8000
# For production, use https://your-server-domain.com:8000 or your load balancer URL
API_URL=http://localhost:8000

# AI Processing Intervals (in seconds)
ANOMALY_PROCESSING_INTERVAL=60
FORECAST_INTERVAL=86400  # 24 hours

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION=7  # days
BACKUP_PATH=/backups
